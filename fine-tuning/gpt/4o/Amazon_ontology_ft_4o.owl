@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix um: <https://vocab.um.es#> .

um:ReviewSystem rdf:type owl:Ontology .

### Classes ###
um:User rdf:type owl:Class ;
    rdfs:label "User" .

um:Product rdf:type owl:Class ;
    rdfs:label "Product" .

um:Review rdf:type owl:Class ;
    rdfs:label "Review" .

### Object Properties ###
um:reviews rdf:type owl:ObjectProperty ;
    rdfs:domain um:User ;
    rdfs:range um:Review ;
    rdfs:label "reviews" .

um:forProduct rdf:type owl:ObjectProperty ;
    rdfs:domain um:Review ;
    rdfs:range um:Product ;
    rdfs:label "forProduct" .

### Data Properties ###
um:userId rdf:type owl:DatatypeProperty ;
    rdfs:domain um:User ;
    rdfs:range xsd:string ;
    rdfs:label "userId" .

um:productId rdf:type owl:DatatypeProperty ;
    rdfs:domain um:Product ;
    rdfs:range xsd:string ;
    rdfs:label "productId" .

um:ratingValue rdf:type owl:DatatypeProperty ;
    rdfs:domain um:Review ;
    rdfs:range xsd:float ;
    rdfs:label "ratingValue" .

um:timestamp rdf:type owl:DatatypeProperty ;
    rdfs:domain um:Review ;
    rdfs:range xsd:dateTime ;
    rdfs:label "timestamp" .
