@prefix base: <https://base_ontology.com#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix gr: <http://purl.org/goodrelations/v1#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

base:Product rdf:type owl:Class ;
              rdfs:subClassOf schema:Product .

base:Brand rdf:type owl:Class ;
            rdfs:subClassOf base:Product, schema:Brand .

base:Category rdf:type owl:Class ;
              rdfs:subClassOf base:Product, schema:Category .

base:SubCategory rdf:type owl:Class ;
                 rdfs:subClassOf base:Category, schema:Thing .

base:hasBrand rdf:type owl:ObjectProperty ;
              rdfs:domain base:Product ;
              rdfs:range base:Brand .

base:hasCategory rdf:type owl:ObjectProperty ;
                 rdfs:domain base:Product ;
                 rdfs:range base:Category .

base:hasSubCategory rdf:type owl:ObjectProperty ;
                    rdfs:domain base:Category ;
                    rdfs:range base:SubCategory .

base:hasImage rdf:type owl:ObjectProperty ;
              rdfs:domain base:Product ;
              rdfs:range schema:image .

base:hasAbsoluteUrl rdf:type owl:DatatypeProperty ;
                    rdfs:domain base:Product ;
                    rdfs:range xsd:anyURI .

base:hasProductName rdf:type owl:DatatypeProperty ;
                    rdfs:domain base:Product ;
                    rdfs:range xsd:string .

base:hasQuantity rdf:type owl:DatatypeProperty ;
                 rdfs:domain base:Product ;
                 rdfs:range schema:QuantitativeValue .

base:hasDiscountPrice rdf:type owl:DatatypeProperty ;
                      rdfs:domain base:Product ;
                      rdfs:range xsd:float .

base:hasPrice rdf:type owl:DatatypeProperty ;
               rdfs:domain base:Product ;
               rdfs:range xsd:float .