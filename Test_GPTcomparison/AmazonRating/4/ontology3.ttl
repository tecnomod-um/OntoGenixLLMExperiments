@prefix base: <https://base_ontology.com#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .
@prefix gr: <http://purl.org/goodrelations/v1#> .
@prefix sio: <http://semanticscience.org/resource/> .
@prefix dbo: <http://dbpedia.org/ontology/> .
@prefix dcterms: <http://purl.org/dc/terms/> .

base:Product rdf:type owl:Class ;
              rdfs:subClassOf gr:ProductOrService .

base:User rdf:type owl:Class ;
           rdfs:subClassOf foaf:Person .

base:Review rdf:type owl:Class ;
             rdfs:subClassOf schema:Review .

base:RatedProduct rdf:type owl:Class ;
                  rdfs:subClassOf gr:Offering .

base:Reviewer rdf:type owl:Class ;
               rdfs:subClassOf schema:Person .

base:ProductReview rdf:type owl:Class ;
                   rdfs:subClassOf schema:Review .

base:hasReview rdf:type owl:ObjectProperty ;
               rdfs:domain base:Product ;
               rdfs:range base:Review .

base:reviewedProduct rdf:type owl:ObjectProperty ;
                     rdfs:domain base:Review ;
                     rdfs:range base:RatedProduct .

base:reviewer rdf:type owl:ObjectProperty ;
              rdfs:domain base:Review ;
              rdfs:range base:Reviewer .

base:productId rdf:type owl:DatatypeProperty ;
                rdfs:domain base:Product ;
                rdfs:range xsd:string .

base:ratingValue rdf:type owl:DatatypeProperty ;
                 rdfs:domain base:Review ;
                 rdfs:range xsd:float .

base:timestampValue rdf:type owl:DatatypeProperty ;
                    rdfs:domain base:Review ;
                    rdfs:range xsd:dateTime .

base:userId rdf:type owl:DatatypeProperty ;
             rdfs:domain base:User ;
             rdfs:range xsd:string .